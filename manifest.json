{
    "manifest_version": 2,
    "name":"Converter",
    "version": "1.0",

    "content_scripts": [{    
			"matches": ["http://*/*"],
            "js":["content_script.js"]
        }],

     "background": {
        "scripts": [ "background.js" ]
    },

    "permissions":[ "tabs", "activeTab" ],

    "description": "Highlight numbers and show their conversion into kilograms.",

    "browser_action": {
        "default_title":"Converter"
    },
	
	"commands": {
		"Ctrl + Shift + A": { 
		"suggested_key": {
			"default": "Ctrl + Shift + A"
			},
			"description": "Converts highlighted numbers to kg."	
		}
	}
}